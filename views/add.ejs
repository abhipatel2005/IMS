    <script>
      // Get references to the two dropdowns
const dropdown1 = document.getElementById('dropdown1');
const dropdown2 = document.getElementById('dropdown2');

// Define a mapping of options for the second dropdown based on the selection in the first dropdown
const optionsMap = {
  it_products: ['Desktop Computers', 'Laptop Notebook', 'Computer Printers' , 'Tablet Computers'],
  automobiles: ['BUses', 'Tractors' , 'Cars' , 'Utility vehicles'],
  furniture: ['Class Room Desking', 'Executive Tables', 'Revolving Chair' , 'Movable file storage system'],
  medical_products: ['Alcohol Based Hand Sanitizer', 'Surgical Gloves as per IS 4148', 'Disposable Syringes as per IS 10258'],
  stationary_items: ['Diaries Printed PLain Register', 'Gel Pen', 'maplitho paper'],
  electrical_appliance: ['Led Luminaire', 'Molded Case Circuit Breakers(MCCB)', 'Telecommunication Cable'],
  electrical_equipments: ['Television TV', 'Domestic Refrigerators'],
  textile_products: ['Handloom cotton base sheets', 'Cotton Towels as per IS 7056'],
  pipes_fitting: ['Steel tubes , tubulars and fittings', 'commercial CPVC Pipe Fittings'],
};



// Function to update the options in the second dropdown based on the selection in the first dropdown
function updateSecondDropdown() {
  const selectedOption = dropdown1.value;
  const options = optionsMap[selectedOption] || [];

  // Clear existing options
  dropdown2.innerHTML = '';

  // Add new options
  options.forEach((option) => {
    const optionElement = document.createElement('option');
    optionElement.value = option;
    optionElement.textContent = option;
    dropdown2.appendChild(optionElement);
  });
}

// Add an event listener to the first dropdown to update the second dropdown when it changes
dropdown1.addEventListener('change', updateSecondDropdown);

// Call the function to initialize the second dropdown based on the initial selection
updateSecondDropdown();

    </script>
